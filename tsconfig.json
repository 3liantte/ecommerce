{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/backend/Sidebar.jsx",
    "app/(back-end)/layout.tsx",
    "app/layout.tsx",
    "app/(back-end)/dashboard/(catalogue)/coupons/server/server.js",
    "components/backend/FormInputs/ImageInput.tsx"
, "lib/utils.ts", "lib/uploadthing.js", "lib/generateSlug.js"  ],

  "exclude": ["node_modules"]
}
