{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/backend/Sidebar.jsx",
    "app/(back-end)/layout.tsx",
    "app/layout.tsx",
    "app/(back-end)/dashboard/(catalogue)/coupons/server/server.js"
, "lib/utils.js", "lib/generateSlug.ts", "lib/uploadthing.js", "lib/apiRequest.js"  ],

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/backend/Sidebar.jsx", "app/(back-end)/layout.tsx", "app/layout.tsx", "lib/apiRequest.js", "app/(back-end)/dashboard/(catalogue)/categories/new/page.jsx", "lib/utils.js", "lib/generateSlug.ts", "lib/uploadthing.js"],

  "exclude": ["node_modules"]
}
